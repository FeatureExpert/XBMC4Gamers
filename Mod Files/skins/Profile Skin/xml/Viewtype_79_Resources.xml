								<left>0</left>
								<top>0</top>
								<width>1280</width>
								<height>460</height>
								<onleft>79</onleft>
								<onright>79</onright>
								<onup>9000</onup>
								<ondown>-</ondown>
								<viewtype label="view79">list</viewtype>
								<pagecontrol>-</pagecontrol>
								<scrolltime>0</scrolltime>
								<focusposition>1</focusposition>
								<movement>1</movement>
								<orientation>horizontal</orientation>
								<preloaditems>3</preloaditems>
