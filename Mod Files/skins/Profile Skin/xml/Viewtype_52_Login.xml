<includes>
		<include name="LoginView">
				<control type="group">
						<visible>Control.IsVisible(52) + !Control.IsVisible(50) + !Window.IsVisible(134) + !Window.IsVisible(3000)</visible>
						<control type="group">
								<control type="fixedlist" id="52">
										<left>0</left>
										<top>375</top>
										<width>1280</width>
										<height>460</height>
										<onleft>52</onleft>
										<onright>52</onright>
										<onup>9000</onup>
										<ondown>90</ondown>
										<viewtype label="view52">list</viewtype>
										<pagecontrol>90</pagecontrol>
										<scrolltime>230</scrolltime>
										<focusposition>3</focusposition>
										<movement>0</movement>
										<orientation>horizontal</orientation>
										<preloaditems>6</preloaditems>
										<itemlayout height="428" width="216">
												<control type="group">
														<left>-116</left>
														<control type="image">
																<left>2</left>
																<top>0</top>
																<width>214</width>
																<height>214</height>
																<aspectratio>stretch</aspectratio>
																<texture background="true" border="5">views/login/thumb-border.png</texture>
																<visible>!Skin.HasSetting(hideloginborder)</visible>
														</control>
														<control type="group">
																<visible>!Skin.HasSetting(_resourcesenabled)</visible>
																<control type="image">
																		<left>7</left>
																		<top>5</top>
																		<width>204</width>
																		<height>204</height>
																		<aspectratio>stretch</aspectratio>
																		<texture background="true">views/login/thumbnf.png</texture>
																</control>
																<control type="image">
																		<left>7</left>
																		<top>5</top>
																		<width>204</width>
																		<height>204</height>
																		<aspectratio>scale</aspectratio>
																		<texture background="true">$INFO[listitem.icon]</texture>
																</control>
														</control>
														<control type="group">
																<visible>Skin.HasSetting(_resourcesenabled)</visible>
																<control type="image">
																		<left>7</left>
																		<top>5</top>
																		<width>204</width>
																		<height>204</height>
																		<aspectratio>scale</aspectratio>
																		<texture background="true">no_loginIcon.jpg</texture>
																</control>
																<control type="image">
																		<left>7</left>
																		<top>5</top>
																		<width>204</width>
																		<height>204</height>
																		<aspectratio>scale</aspectratio>
																		<texture background="true">$INFO[listitem.icon]</texture>
																		<visible>ListItem.IsFolder</visible>
																</control>
																<control type="largeimage">
																		<left>7</left>
																		<top>5</top>
																		<width>204</width>
																		<height>204</height>
																		<aspectratio>scale</aspectratio>
																		<texture>$INFO[listitem.path,,_resources\artwork\poster.jpg]</texture>
																</control>
														</control>
														<!-- Shared images -->
														<control type="image">
																<left>10</left>
																<top>8</top>
																<width>25</width>
																<height>25</height>
																<aspectratio>stretch</aspectratio>
																<texture>$INFO[listitem.overlay]</texture>
														</control>
												</control>
										</itemlayout>
										<focusedlayout height="428" width="216">
												<control type="group">
														<left>-116</left>
														<control type="image">
																<left>2</left>
																<top>0</top>
																<width>214</width>
																<height>214</height>
																<aspectratio>stretch</aspectratio>
																<texture background="true" border="5">views/login/thumb-border.png</texture>
																<animation reversible="false" effect="zoom" start="2,0,214,214" end="-8,-10,234,234" time="200">focus</animation>
																<animation reversible="false" effect="zoom" end="2,0,214,214" start="-8,-10,234,234" time="200">unfocus</animation>
																<visible>!Skin.HasSetting(hideloginborder)</visible>
														</control>
														<control type="group">
																<visible>!Skin.HasSetting(_resourcesenabled)</visible>
																<control type="image">
																		<left>7</left>
																		<top>5</top>
																		<width>204</width>
																		<height>204</height>
																		<aspectratio>stretch</aspectratio>
																		<texture background="true">views/login/thumbnf.png</texture>
																		<animation reversible="false" effect="zoom" start="7,5,204,204" end="-2,-4,222,222" time="200">focus</animation>
																		<animation reversible="false" effect="zoom" end="7,5,204,204" start="-2,-4,222,222" time="200">unfocus</animation>
																</control>
																<control type="image">
																		<left>7</left>
																		<top>5</top>
																		<width>204</width>
																		<height>204</height>
																		<aspectratio>scale</aspectratio>
																		<texture background="true">$INFO[listitem.icon]</texture>
																		<animation reversible="false" effect="zoom" start="7,5,204,204" end="-2,-4,222,222" time="200">focus</animation>
																		<animation reversible="false" effect="zoom" end="7,5,204,204" start="-2,-4,222,222" time="200">unfocus</animation>
																</control>
														</control>
														<control type="group">
																<visible>Skin.HasSetting(_resourcesenabled)</visible>
																<control type="image">
																		<left>7</left>
																		<top>5</top>
																		<width>204</width>
																		<height>204</height>
																		<aspectratio>scale</aspectratio>
																		<texture background="true">no_loginIcon.jpg</texture>
																		<animation reversible="false" effect="zoom" start="7,5,204,204" end="-2,-4,222,222" time="200">focus</animation>
																		<animation reversible="false" effect="zoom" end="7,5,204,204" start="-2,-4,222,222" time="200">unfocus</animation>
																</control>
																<control type="image">
																		<left>7</left>
																		<top>5</top>
																		<width>204</width>
																		<height>204</height>
																		<aspectratio>scale</aspectratio>
																		<texture background="true">$INFO[listitem.icon]</texture>
																		<visible>ListItem.IsFolder</visible>
																		<animation reversible="false" effect="zoom" start="7,5,204,204" end="-2,-4,222,222" time="200">focus</animation>
																		<animation reversible="false" effect="zoom" end="7,5,204,204" start="-2,-4,222,222" time="200">unfocus</animation>
																</control>
																<control type="largeimage">
																		<left>7</left>
																		<top>5</top>
																		<width>204</width>
																		<height>204</height>
																		<aspectratio>scale</aspectratio>
																		<texture>$INFO[listitem.path,,_resources\artwork\poster.jpg]</texture>
																		<animation reversible="false" effect="zoom" start="7,5,204,204" end="-2,-4,222,222" time="200">focus</animation>
																		<animation reversible="false" effect="zoom" end="7,5,204,204" start="-2,-4,222,222" time="200">unfocus</animation>
																</control>
														</control>
														<control type="image">
																<left>10</left>
																<top>8</top>
																<width>25</width>
																<height>25</height>
																<aspectratio>stretch</aspectratio>
																<texture>$INFO[listitem.overlay]</texture>
																<animation reversible="false" effect="zoom" start="10,8,25,25" end="0,-3,30,30" time="200">focus</animation>
																<animation reversible="false" effect="zoom" end="10,8,25,25" start="0,-3,30,30" time="200">unfocus</animation>
														</control>
												</control>
										</focusedlayout>
								</control>
								<control type="label">
										<left>0</left>
										<top>115r</top>
										<width>1280</width>
										<height>36</height>
										<font>size_35</font>
										<textcolor>$VAR[var-labelcolour]</textcolor>
										<scroll>true</scroll>
										<align>center</align>
										<aligny>center</aligny>
										<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidefoldernames) + !Container(52).ListItem.IsFolder">Conditional</animation>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidegamenames) + Container(52).ListItem.IsFolder">Conditional</animation>
								</control>
								<control type="label">
										<left>0</left>
										<top>640</top>
										<width>1280</width>
										<height>30</height>
										<font>size_15</font>
										<textcolor>$VAR[var-labelcolour]</textcolor>
										<scroll>true</scroll>
										<align>center</align>
										<aligny>center</aligny>
										<label>$LOCALIZE[31186]</label>
										<visible>StringCompare(ListItem.ProgramCount,0) + !ListItem.IsFolder</visible>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidefoldernames) + !Container(52).ListItem.IsFolder">Conditional</animation>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidegamenames) + Container(52).ListItem.IsFolder">Conditional</animation>
								</control>
								<control type="label">
										<left>0</left>
										<top>640</top>
										<width>1280</width>
										<height>30</height>
										<font>size_15</font>
										<textcolor>$VAR[var-labelcolour]</textcolor>
										<scroll>true</scroll>
										<align>center</align>
										<aligny>center</aligny>
										<label>$LOCALIZE[31187] $INFO[ListItem.ProgramCount,, $LOCALIZE[31188]]</label>
										<visible>StringCompare(ListItem.ProgramCount,1) + !ListItem.IsFolder</visible>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidefoldernames) + !Container(52).ListItem.IsFolder">Conditional</animation>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidegamenames) + Container(52).ListItem.IsFolder">Conditional</animation>
								</control>
								<control type="label">
										<left>0</left>
										<top>640</top>
										<width>1280</width>
										<height>30</height>
										<font>size_15</font>
										<textcolor>$VAR[var-labelcolour]</textcolor>
										<scroll>true</scroll>
										<align>center</align>
										<aligny>center</aligny>
										<label>$LOCALIZE[31187] $INFO[ListItem.ProgramCount,, $LOCALIZE[31189]]</label>
										<visible>IntegerGreaterThan(ListItem.ProgramCount,1) + !ListItem.IsFolder</visible>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidefoldernames) + !Container(52).ListItem.IsFolder">Conditional</animation>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidegamenames) + Container(52).ListItem.IsFolder">Conditional</animation>
								</control>
								<control type="scrollbar" id="90">
										<onup>52</onup>
										<include condition="Control.IsVisible(52)">ViewScrollBarHor</include>
								</control>
						</control>
				</control>
		</include>
</includes>